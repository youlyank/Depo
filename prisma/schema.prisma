generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  prompt      String
  isActive    Boolean  @default(true)
  userId      String?
  schedule    String?  // Cron expression for scheduling
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  nodes       Node[]
  edges       Edge[]
  executions  Execution[]
  
  @@map("workflows")
}

model Node {
  id          String   @id @default(cuid())
  workflowId  String
  nodeId      String   // Unique ID within the workflow
  type        String   // trigger, action, condition, etc.
  title       String
  description String?
  config      Json?    // Node configuration
  position    Json     // { x: number, y: number }
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  @@unique([workflowId, nodeId])
  @@map("nodes")
}

model Edge {
  id          String   @id @default(cuid())
  workflowId  String
  edgeId      String   // Unique ID within the workflow
  sourceId    String   // Source node ID
  targetId    String   // Target node ID
  sourceHandle String? // Source handle name
  targetHandle String? // Target handle name
  createdAt   DateTime @default(now())
  
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  @@map("edges")
}

model Execution {
  id          String   @id @default(cuid())
  workflowId  String
  status      String   @default("pending") // pending, running, completed, failed
  input       Json?    // Input data
  output      Json?    // Output data
  error       String?
  startedAt   DateTime @default(now())
  completedAt DateTime?
  
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  @@map("executions")
}